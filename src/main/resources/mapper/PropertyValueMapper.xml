<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tmall.mapper.PropertyValueMapper">

    <resultMap id="BaseResultMap" type="com.tmall.entity.PropertyValue">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="productId" column="product_id" jdbcType="INTEGER"/>
            <result property="propertyId" column="property_id" jdbcType="INTEGER"/>
            <result property="value" column="value" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,product_id,property_id,
        value
    </sql>
    <select id="selectAllByProductId" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from property_value
        where
        product_id = #{productId,jdbcType=NUMERIC}
    </select>
</mapper>
