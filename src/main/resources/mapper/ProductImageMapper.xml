<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tmall.mapper.ProductImageMapper">

    <resultMap id="BaseResultMap" type="com.tmall.entity.ProductImage">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="productId" column="product_id" jdbcType="INTEGER"/>
            <result property="type" column="type" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,product_id,type
    </sql>
    <select id="selectAllByProductIdAndTypeOrderByIdDesc" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from product_image
        where
        product_id = #{productId,jdbcType=NUMERIC}
        AND type = #{type,jdbcType=VARCHAR}
        order by id desc
    </select>

</mapper>
